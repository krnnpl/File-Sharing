<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Users</title>
  <link rel="stylesheet" href="../css/bootstrap.min.css">
</head>

<body>
  {{> navbaradmin}}

  <div class="container">
    <h2>Users</h2>
    <table id="usersTable" class="table table-striped">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Phone Number</th>
          <th>Username</th>
          <th>Branch</th>
        </tr>
      </thead>
      <tbody>
        <!-- User data will be dynamically inserted here -->
      </tbody>
    </table>
  </div>

  <script src="../jq/jquery.js" type="text/javascript"></script>
  <script>
    // Function to fetch users from the server and populate the table
    function fetchUsers() {
      // Send a GET request to retrieve all users
          var accessToken = document.cookie.replace(/(?:(?:^|.*;\s*)accessToken\s*=\s*([^;]*).*$)|^.*$/, "$1");

      fetch('/api/auth/users', {
        method: 'GET',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': 'Bearer {{accessToken}}' // Replace with the actual access token
        }
      })
        .then(response => response.json())
        .then(users => {
          // Clear the table body
          const tableBody = document.querySelector('#usersTable tbody');
          tableBody.innerHTML = '';

          // Populate the table with user data
          users.forEach(user => {
            const row = document.createElement('tr');
            row.innerHTML = `
              <td>${user.firstName}</td>
              <td>${user.lastName}</td>
              <td>${user.phoneNumber}</td>
              <td>${user.username}</td>
              <td>${user.branch}</td>
            `;
            tableBody.appendChild(row);
          });
        })
        .catch(error => {
          console.error(error);
          alert('Failed to fetch users.');
        });
    }

    // Call the fetchUsers function when the page is loaded
    document.addEventListener('DOMContentLoaded', fetchUsers);
  </script>
</body>

</html>
